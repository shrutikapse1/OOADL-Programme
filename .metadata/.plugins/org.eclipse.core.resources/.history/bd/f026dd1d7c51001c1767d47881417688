package i2.logic;

public class Movie {
    private String name;
    private IMDB imdbRating;
    private int noOfUsers;
    public Movie() {
    	IMDB imdbRating=new IMDB();
    }
    public String getName() {
    	return this.name;
    }
    public void setName(String name) {
    	this.name=name;
    }
    public IMDB getImdbRating() {
    	return this.imdbRating;
    }
    public void setImdbRating(IMDB imdbRating) {
    	this.imdbRating=imdbRating;
    }
    public void displayMovieDetails() {
    	System.out.println("Movie Name :"+this.name);
    	System.out.println("IMDB Rating:"+imdbRating.calculateAverageRating());
    	System.out.println("Total Number Of Users:"+imdbRating.getTotalNoOfUsers());
    }
}
